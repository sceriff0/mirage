nextflow_process {

    name "Test MERGE_AND_PYRAMID process"
    script "modules/local/merge_and_pyramid.nf"
    process "MERGE_AND_PYRAMID"

    tag "modules"
    tag "modules_local"
    tag "merge_and_pyramid"

    test("Should create pyramidal OME-TIFF - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pyramid_resolutions = 3
                pyramid_scale = 2
                tilex = 256
                compression = 'lzw'
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    [
                        file('$projectDir/tests/testdata/sample_DAPI.tif', checkIfExists: true),
                        file('$projectDir/tests/testdata/sample_PANCK.tif', checkIfExists: true),
                        file('$projectDir/tests/testdata/sample_SMA.tif', checkIfExists: true)
                    ],
                    file('$projectDir/tests/testdata/P001_cell_mask.npy', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.pyramid },
                { assert process.out.versions },
                { with(process.out.pyramid) {
                    assert size() == 1
                    assert get(0).get(0).patient_id == 'P001'
                    assert get(0).get(1).toString().endsWith('pyramid.ome.tiff')
                }}
            )
        }
    }

