nextflow_process {

    name "Test REGISTER_VALIS_PAIRS process"
    script "modules/local/register_valis_pairs.nf"
    process "REGISTER_VALIS_PAIRS"

    tag "modules"
    tag "modules_local"
    tag "register_valis_pairs"

    test("Should run pairwise VALIS registration - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.registered },
                { assert process.out.versions },
                { with(process.out.registered) {
                    assert size() == 1
                    assert get(0).get(0).patient_id == 'P001'
                    // Output should be moving image with _registered suffix
                    assert get(0).get(1).toString().endsWith('_registered.ome.tiff')
                }}
            )
        }
    }

    test("Should output only moving image registered - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov2.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { with(process.out.registered) {
                    // Should be P001_mov2_registered.ome.tiff (not reference)
                    assert get(0).get(1).toString().contains('P001_mov2')
                    assert !get(0).get(1).toString().contains('ref')
                }}
            )
        }
    }

    test("Should preserve metadata through registration - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P002',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK'],
                        custom_field: 'preserved_value'
                    ],
                    file('$projectDir/tests/testdata/P002_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { with(process.out.registered) {
                    assert get(0).get(0).patient_id == 'P002'
                    assert get(0).get(0).channels == ['DAPI', 'PANCK']
                    assert get(0).get(0).custom_field == 'preserved_value'
                }}
            )
        }
    }

    test("Should emit versions.yml with VALIS info - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.versions },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }

    test("Should skip when ext.when is false") {

        options "-stub"

        when {
            process {
                """
                // Set ext.when to false
                task.ext.when = false

                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            // Process should be skipped but not fail
            assert process.success
        }
    }
}
