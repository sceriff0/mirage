/*
========================================================================================
    nf-test Configuration
========================================================================================
    Configuration for nf-test framework
    https://code.askimed.com/nf-test/
========================================================================================
*/

config {
    // Location for nf-test temporary files
    workDir = ".nf-test"

    // Test output directory
    testsDir = "tests"

    // Enable test profiles
    profile = "test,docker"

    // Plugins configuration
    plugins {
        load "nf-test@0.8.4"
    }
}

// Test profiles
profiles {
    test {
        // Use minimal resources for testing
        docker.enabled = true
        params.max_cpus = 2
        params.max_memory = '6.GB'
        params.max_time = '1.h'
    }

    // Stub mode for fast testing
    stub {
        docker.enabled = false
        params.stub_run = true
    }
}
