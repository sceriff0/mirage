nextflow_process {

    name "Test PAD_IMAGES process"
    script "modules/local/pad_images.nf"
    process "PAD_IMAGES"

    tag "modules"
    tag "modules_local"
    tag "pad_images"

    test("Should pad image to target dimensions - stub") {

        options "-stub"

        when {
            params {
                gpu_reg_pad_mode = 'constant'
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/sample_max_dims.txt', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.padded },
                { assert process.out.versions },
                { with(process.out.padded) {
                    assert size() == 1
                    assert get(0).get(0).patient_id == 'P001'
                    assert get(0).get(1).toString().endsWith('_padded.ome.tif')
                }}
            )
        }
    }

