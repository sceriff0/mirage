nextflow_process {

    name "Test PHENOTYPE process"
    script "modules/local/phenotype.nf"
    process "PHENOTYPE"

    tag "modules"
    tag "modules_local"
    tag "phenotype"

    test("Should run phenotyping - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pheno_quality_percentile = 0.05
                pheno_noise_percentile = 0.95
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/sample_merged_quant.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.csv },
                { assert process.out.geojson },
                { assert process.out.classifications },
                { assert process.out.mapping },
                { assert process.out.versions }
            )
        }
    }

    test("Should emit CSV, GeoJSON, classifications, and mapping - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pheno_quality_percentile = 0.05
                pheno_noise_percentile = 0.95
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/sample_merged_quant.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { with(process.out.csv) {
                    assert size() == 1
                    assert get(0).get(1).toString().endsWith('phenotypes_data.csv')
                }},
                { with(process.out.geojson) {
                    assert size() == 1
                    assert get(0).get(1).toString().endsWith('phenotypes.geojson')
                }},
                { with(process.out.classifications) {
                    assert size() == 1
                    assert get(0).get(1).toString().endsWith('phenotypes.classifications.json')
                }},
                { with(process.out.mapping) {
                    assert size() == 1
                    assert get(0).get(1).toString().endsWith('phenotypes_mapping.json')
                }}
            )
        }
    }

    test("Should preserve patient metadata - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pheno_quality_percentile = 0.05
                pheno_noise_percentile = 0.95
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P002',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK'],
                        custom_field: 'test_value'
                    ],
                    file('$projectDir/tests/testdata/sample_merged_quant.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { with(process.out.csv) {
                    assert get(0).get(0).patient_id == 'P002'
                    assert get(0).get(0).channels == ['DAPI', 'PANCK']
                    assert get(0).get(0).custom_field == 'test_value'
                }}
            )
        }
    }

    test("Should emit versions.yml - stub") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pheno_quality_percentile = 0.05
                pheno_noise_percentile = 0.95
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/sample_merged_quant.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.versions },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }

    test("Should skip when ext.when is false") {

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
                pixel_size = 0.325
                pheno_quality_percentile = 0.05
                pheno_noise_percentile = 0.95
            }
            process {
                """
                // Set ext.when to false
                task.ext.when = false

                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: true,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/sample_merged_quant.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            // Process should be skipped but not fail
            assert process.success
        }
    }
}
