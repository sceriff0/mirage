nextflow_process {

    name "Test SEGMENT process"
    script "modules/local/segment.nf"
    process "SEGMENT"

    tag "modules"
    tag "modules_local"
    tag "segment"

    test("Should segment cells from merged image - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('tests/testdata/P001_ref.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assert process.success
            assert process.out.nuclei_mask
            assert process.out.cell_mask
            assert process.out.versions

            with(process.out.nuclei_mask) {
                assert size() == 1
                assert get(0).get(0).patient_id == 'P001'
                assert get(0).get(1).toString().endsWith('_nuclei_mask.tif')
            }

            with(process.out.cell_mask) {
                assert size() == 1
                assert get(0).get(0).patient_id == 'P001'
                assert get(0).get(1).toString().endsWith('_cell_mask.tif')
            }
        }
    }

    test("Should fail if DAPI not in channel 0 - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        channels: ['PANCK', 'DAPI', 'SMA']  // DAPI NOT FIRST
                    ],
                    file('tests/testdata/P001_ref.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            // Validation runs in script block and should fail
            assert process.failed
            assert process.exitStatus == 1
        }
    }

    test("Should respect when condition") {

        options "-stub"

        when {
            process {
                """
                // Set ext.when to false
                ext.when = false

                input[0] = [
                    [
                        patient_id: 'P001',
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('tests/testdata/P001_ref.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            // Process should be skipped
            assert process.success
        }
    }

    test("Should produce valid cell masks with cells - real") {

        tag "real"
        tag "slow"

        when {
            params {
                seg_model = "2D_versatile_fluo"
                seg_gpu = false
            }
            process {
                """
                input[0] = [
                    [
                        patient_id: 'P001',
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.nuclei_mask },
                { assert process.out.cell_mask },
                // Validate files are not empty (have actual size > 100 bytes)
                { assert process.out.nuclei_mask.get(0).get(1).size() > 100 },
                { assert process.out.cell_mask.get(0).get(1).size() > 100 },
                // Metadata preserved
                { assert process.out.nuclei_mask.get(0).get(0).patient_id == 'P001' },
                { assert process.out.cell_mask.get(0).get(0).patient_id == 'P001' },
                // Correct file naming
                { assert process.out.nuclei_mask.get(0).get(1).toString().endsWith('_nuclei_mask.tif') },
                { assert process.out.cell_mask.get(0).get(1).toString().endsWith('_cell_mask.tif') }
            )
        }
    }
}
