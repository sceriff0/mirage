// Base configuration with generous resource allocations and label-based selectors
process {
    // Default local resources (overridden by profiles)
    executor = 'local'
}

// Resource allocations by label
process {
    withLabel: 'gpu' {
        cpus = 8
        memory = '64 GB'
        time = '12h'
        clusterOptions = '--gres=gpu:1'
    }

    withLabel: 'standard' {
        cpus = 4
        memory = '8 GB'
        time = '2h'
    }

    withLabel: 'small' {
        cpus = 1
        memory = '2 GB'
        time = '1h'
    }
}
