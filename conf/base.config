/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Base configuration for SLURM execution
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options optimized for SLURM clusters
*/

process {
    // SLURM executor settings
    executor = 'slurm'

    // Error handling
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries    = 2
    maxErrors     = '-1'

    // Default resource requirements
    cpus   = 1
    memory = '6.GB'
    time   = '4.h'

    // SLURM-specific settings
    queue = null  // Will use default partition if not specified
    clusterOptions = null
}

// Executor configuration for SLURM
executor {
    name = 'slurm'
    queueSize = 100
    submitRateLimit = '10 sec'
    exitReadTimeout = '1000000 sec'
}
