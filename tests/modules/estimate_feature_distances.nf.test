    test("Should skip when ext.when is false") {

        options "-stub"

        when {
            params {
                container = [registration: 'docker://bolt3x/attend_image_analysis:debug_diffeo']
                feature_detector = 'superpoint'
                feature_max_dim = 2048
                feature_n_features = 5000
                outdir = "$outputDir"
                registration_method = 'valis'
            }
            process {
                """
                // Set ext.when to false
                task.ext.when = false

                input[0] = [
                    [
                        patient_id: 'P001',
                        is_reference: false,
                        channels: ['DAPI', 'PANCK', 'SMA']
                    ],
                    file('$projectDir/tests/testdata/P001_ref.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true),
                    file('$projectDir/tests/testdata/P001_mov1.ome.tiff', checkIfExists: true)
                ]
                """
            }
        }

        then {
            // Process should be skipped but not fail
            assert process.success
        }
    }
}
