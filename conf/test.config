// Test profile configuration: small resources, local executor, and test data
process {
    executor = 'local'
    cpus = 1
    memory = '1 GB'
    time = '30m'
}

params {
    // Override inputs to use test fixtures generated under tests/testdata
    input = 'tests/testdata/*.tif'
    // Disable GPU paths for tests by default
    quant_gpu = false
}
